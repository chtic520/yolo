extends wemedia

block bodycontent
	div.section-category
		.container
			div.category-box2(style="background-color: transparent; margin-bottom: 0;")
				span 分类：
				if keyword == 1
					a.first.active
						span 不限
				else
					a.first(href="/wemedia/wesite")
						span 不限
				each cate in category
					if keyword.name == cate.name
						a.active
							span #{cate.name}
					else
						a(href="/wemedia/wesite/search?category=#{cate._id}&page=0")
							span #{cate.name}
	div.section-nav
		.container
			p
				| 您当前所在位置：
				a(href="/") 首页
				|  > 
				span 新微媒体
				|  > 
				span 网站媒体
	div.section-table
		.container
			div.section-display-box
				each item in wesite
					div.item-list.item-4
						div.wemedia-container
							.wemedia-pic
								img(src="#{item.pic}")
							div.wemedia-info
								span #{item.name}
	div.section-pagination
		.container
			div.pagination
				- if(keyword == 1){
					- if(currentPage == 0){
							a.pre.disabled <
					- }else{
							a.pre(href="/wemedia/wesite?page=#{currentPage - 1}") <
					- }
				- }else{
					- if(currentPage == 0){
							a.pre.disabled <
					- }else{
							a.pre(href="/wemedia/wesite/search?category=#{keyword._id}&page=#{currentPage - 1}") <
					- }
				- }
				- for(var i = 0; i < totalPage; i++){
					- if(currentPage == i){
							a.active
								span #{currentPage + 1}
					- }else{
							if keyword == 1
								a(href="/wemedia/wesite?page=#{i}")
									span #{i + 1}
							else
								a(href="/wemedia/wesite/search?category=#{keyword._id}&page=#{i}")
									span #{i + 1}
					- }
				- }
				- if(keyword == 1){
					- if(currentPage == totalPage - 1){
							a.next.disabled >
					- }else{
							a.next(href="/wemedia/wesite?page=#{currentPage + 1}") >
					- }
				- }else{
					- if(currentPage == totalPage - 1){
							a.next.disabled >
					- }else{
							a.next(href="/wemedia/wesite/search?category=#{keyword._id}&page=#{currentPage + 1}") >
					- }
				- }