extends ../../adminContentLayout

block content
	section.content-header
		ol.breadcrumb
			li
				i.fa.fa-dashboard
				| &nbsp;&nbsp;
				a.text-info(href="/admin/index") 首页
			li.active=title
	section.content
		.row
			.col-sm-4
				div.box.box-widget.widget-user
					div.widget-user-header.bg-green-active
						h3.widget-user-username
							i.fa.fa-wechat
							|  微信公众号
						h5.widget-user-desc
							each cat,index in catwechat
								if index < 4
									if index != 3
										| #{cat.name}，
									else
										| #{cat.name}
							if catwechat.length > 4
								| 等等
					div.widget-user-image
						img.img-circle(src="/images/address.png")
					div.box-footer
						div.row
							.col-sm-6.border-right
								.description-block
									h5.description-header #{wechat.length}
									span.description-text 数量
							.col-sm-6
								.description-block
									h5.description-header #{catwechat.length}
									span.description-text 标签数
					div.box-manager.bg-green-active
						a(href="/admin/wemedia/wechat/list")
							| 管理微信资源 
							i.fa.fa-arrow-circle-right
			.col-sm-4
				div.box.box-widget.widget-user
					div.widget-user-header.bg-red-active
						h3.widget-user-username
