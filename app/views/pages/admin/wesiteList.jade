extends ../../adminContentLayout

block content
	section.content-header
		ol.breadcrumb
			li
				i.fa.fa-dashboard
				| &nbsp;&nbsp;
				a.text-info(href="/admin/index") 首页
			li
				a.text-info(href="/admin/wemedia/list") 新微媒体
			li.active=title
	section.content
		.row
			.col-xs-12
				.box
					.box-header.with-border
						h3.box-title 网站媒体列表
						.box-tools
							.btn-toolbar
								a.btn.btn-success.btn-flat.btn-xs#add(href="/admin/wemedia/wesite/new") 新增
								button.btn.btn-warning.btn-flat.btn-xs#update(type="button", data-href="/admin/wemedia/wesite/update/") 修改
								a.btn.btn-info.btn-flat.btn-xs#tagManage(href="/admin/wemedia/wesite/category") 标签管理
								button.btn.btn-danger.btn-flat.btn-xs#del 删除
					.box-body
						table#wesiteTable.table.table-hover.table-bordered.table-condensed
							thead
								tr
									th(width=22)
										input#allCheck(type="checkbox", class="i-checks")
									th 媒体名
									th 标签
									th 图片
							tbody.datalist
								each item in wesite
									tr
										td
											input(type="checkbox", class="i-checks", value=item._id)
										td #{item.name}
										td
											if item.category && item.category.length > 0
												each tag in item.category
													span.label.label-info #{tag.name}
													| &nbsp;
											else
												| 未添加标签
										td
											img.thumImg(src="#{item.pic}", width="100px", height="22px")
	script(src="/js/wesiteList.js", defer="defer")