extends ../../adminContentLayout

block content
	section.content-header
		ol.breadcrumb
			li
				i.fa.fa-dashboard
				| &nbsp;&nbsp;
				a.text-info(href="/admin/index") 首页
			li
				a.text-info(href="/admin/wemedia/list") 新微媒体
			li
				a.text-info(href="/admin/wemedia/wesite/list") 网站媒体
			li.active=title
	section.content
		.row
			.col-xs-12
				.box
					.box-header.with-border
						h3.box-title 网站媒体标签列表
						.box-tools
							.btn-toolbar
								button.btn.btn-danger.btn-flat.btn-xs#del 删除
					.box-body
						table#wesiteTable.table.table-hover.table-bordered.table-condensed
							thead
								tr
									th(width=22)
										input#allCheck(type="checkbox", class="i-checks")
									th 标签名称
									th 资源
									th 创建时间
							tbody.datalist
								each tag in category
									tr
										td
											input(type="checkbox", class="i-checks", value=tag._id)
										td #{tag.name}
										td
											if tag.wesite && tag.wesite.length > 0
												each item in tag.wesite
													span.label.label-info #{item.name}
													| &nbsp;
											else
												| 未添加资源
										td #{moment(tag.meta.updateAt).format('YYYY/MM/DD HH:mm:ss')}
	script(src="/js/wesiteCategoryList.js", defer="defer")